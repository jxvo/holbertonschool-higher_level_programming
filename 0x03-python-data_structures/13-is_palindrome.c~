#include <stdlib.h>
#include "lists.h"

/**
 * is_palindrome - checks whether list is a palindrome or not
 * @head: double pointer to head node
 *
 * Return: 1 if True, 0 if False or failure
 */
int is_palindrome(listint_t **head(
{
	listint_t *node;
	int *val_buf, idx = 0; len = 0;

	node = *head;

	if (!head)
		return (0);
	if (head && !*head)
		return (1);
	while (node)
	{
		node = node->next;
		len++;
	}
}
